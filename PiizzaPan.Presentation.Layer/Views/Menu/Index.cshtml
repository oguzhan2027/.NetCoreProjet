
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Menü Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>menu Adı</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MenuID</td>
            <td>@item.MenuName</td>
            <td>@item.MenuPrice</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Menu/DeleteMenu/@item.MenuID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Menu/UpdateMenu/@item.MenuID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Menu/AddMenu/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>

