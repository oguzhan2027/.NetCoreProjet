@model List<Piizzapan.EntityLayer.Concrete.Gallery>


<section class="w3l-portfolio-8 py-5">
    <div class="portfolio-main py-lg-5 py-md-4">
        <div class="container">
            <div class="title-content text-center">
                <h6 class="sub-title">Galeri</h6>
                <h3 class="title-big">Pizza Galeri</h3>
            </div>
            <div class="row galler-top mt-lg-5 mt-4">
                @foreach(var item in Model)
                {
                    <div class="col-md-3 col-6 protfolio-item hover14">
                        <a href="~/images/@item.ImageUrl" data-lightbox="example-set" class="mb-4"
                           data-title="@item.Title">
                            <figure>
                                <img src="~/images/@item.ImageUrl" alt="product" class="img-fluid radius-image">
                            </figure>
                        </a>
                    </div>
                }
                
            </div>
        </div>
    </div>
</section>