@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mail gödnerme sayfası</h1>
<form method="post">
    <label>Alıcı mail adresi</label>
    <input type="email" class="form-control border" asp-for="ReceiverMail" />
    <br />
    <label>konu</label>
    <input type="text" class="form-control border" asp-for="Subject" />
    <br />
    <label>mesajınız</label>
    <textarea rows="5" class="form-control border" asp-for="MessageContent"></textarea>
    <br />
    <button class="btn btn-primary">mail</button>

</form>

