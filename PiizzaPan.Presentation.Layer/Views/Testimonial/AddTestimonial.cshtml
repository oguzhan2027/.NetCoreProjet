@model PiizzaPan.Presentation.Layer.Models.TestimonialViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Referans Ekleme Sayfası</h1>
<form method="post" enctype="multipart/form-data">
    <label>Müşteri Ad Soyad</label>
    <input type="text" asp-for="CustomerName" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="CustomerTitle" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Yorum</label>
    <input type="text" asp-for="Comment" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Resim</label>
    <input type="file" asp-for="Image" class="form-control" style="background-color : #dedee5" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

