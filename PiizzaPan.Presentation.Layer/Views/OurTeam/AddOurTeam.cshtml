@model OurTeam
@{
    ViewData["Title"] = "AddOurTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni takım üyesi ekleme</h1>
<form method="post">
    <label>Adınız</label>
    <input type="text" asp-for="Name" class="form-control border" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Soyadınız</label>
    <input type="text" asp-for="SurName" class="form-control border" />
    <span asp-validation-for="SurName" class="text-danger"></span>
    <br />

    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control border" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />


    <label>Resim</label>
    <input type="text" asp-for="ImageUrl" class="form-control border" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />

    <button class="btn btn-warning">Kişiyi ekle</button>
</form>

