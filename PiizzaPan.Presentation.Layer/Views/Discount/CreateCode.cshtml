@model Discount
@{
    ViewData["Title"] = "CreateCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni indirim</h1>

<form method="post">
    <label>indirim kodu</label>
    <input type="text" class="form-control" asp-for=DiscountCode value="@ViewBag.v" readonly />
    <br />
    <label>indirim kodu kullanım sayısı</label>
    <input type="text" class="form-control" style="background-color:darkgrey" asp-for="DiscountCount" />
    <br />
    <button class="btn btn-outline-primary">kupon oluştur</button>
</form>

